<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeActivity">

    <ImageView
        android:id="@+id/me"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/me_select"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/f_select"
        android:layout_above="@+id/me"
        android:layout_alignLeft="@+id/me"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/other"
        android:layout_below="@+id/me"
        android:layout_alignLeft="@+id/me"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hard"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/me" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hard"
        android:layout_alignBottom="@+id/me"
        android:layout_toEndOf="@+id/me"/>

</RelativeLayout>